<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Menu1"
    android:id="@+id/menu1">
    <LinearLayout
        android:id="@+id/frame_42731"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/frame"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:clipToOutline="true"
            android:padding="10dp"
            android:src="@drawable/ham" />

        <TextView
            android:id="@+id/point_of_sa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="Menu"
            android:textColor="#20358E"
            android:textSize="22sp"
            android:translationY="0.97sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:clipToOutline="true"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/search" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:clipToOutline="true"
                android:padding="10dp"
                android:src="@drawable/cart" />
            <TextView
                android:id="@+id/cartItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:layout_alignRight="@+id/cartIcon"
                android:layout_alignTop="@+id/cartIcon"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginRight="2dp"
                android:text="01"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:minWidth="18dp"
                android:minHeight="18dp"


                />
        </RelativeLayout>
    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#20358E"
        app:tabIndicatorFullWidth="false"
        android:background="#F7F9FE">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dev"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bawaseer"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPager"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"/>


</LinearLayout>