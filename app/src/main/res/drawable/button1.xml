<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <!-- Default button color -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#CBCED0" /> <!-- Border color -->
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp"/>

        </shape>
    </item>
</selector>